{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Niobium",
            "command": "Niobium/bin/Debug/Niobium.exe",
            "type": "process",
            "args": [
                "${fileDirname}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "endLine": 4,
                        "endColumn": 5,
                        "severity": 6,
                        "message": 7
                    }
                ]
            }
        }
    ]
}
